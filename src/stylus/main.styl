@import 'nib'

global-reset()

body
  background #16161D

.react-vtt
  margin-top 1em
  font-size 140%
  font-smoothing antialiased
  &.active-cues
    .cue
      position relative
      white-space nowrap
      display inline-block
      color white
      .actived
        overflow hidden
        position absolute
        left 0
        top 0
        bottom -.5em
        color #F90
