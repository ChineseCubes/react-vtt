@import 'nib'

global-reset()

body
  color white
  background #16161D
  h1, h2, hr
    margin-bottom 1rem
  h1
    font-size 200%
  h2
    font-size 140%
  hr
    border 0
    border-bottom 1px solid #333
  #wrap
    width 900px
    margin 0 auto
    text-align center
    video
      width  480px
      height 360px

.react-vtt
  margin-top 1em
  font-smoothing antialiased
  &.cues
    .cue
      position relative
      display inline-block
      white-space nowrap
      color white
      .actived
        overflow hidden
        position absolute
        left 0
        top  0
        bottom -.5em
        color #F90
  // custom styles
  //&.karaoke
  &.audio-track
    text-align left
    li
      line-height 1.5rem
  &.cues
    margin 1em auto
    height 1em
